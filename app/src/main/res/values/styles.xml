<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
    </style>

    <style name="TextTheme" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="CheckboxTheme" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="elevation">20dp</item>
    </style>

</resources>
