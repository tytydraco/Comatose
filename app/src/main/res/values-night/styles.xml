<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.DayNight" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="TextTheme" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="CheckboxTheme" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="elevation">20dp</item>
    </style>

    <!-- Colors for material alert dialogs -->
    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
